#-------------------------------------------------------------------------------
# Generic template.
#-------------------------------------------------------------------------------
x = Template("Spheral::PhysicsSpace::GenericHydro",
             "ExtendGenericHydro.hh")

#-------------------------------------------------------------------------------
# Excluded methods.
#-------------------------------------------------------------------------------
exclude(x.artificialViscosityPtr)
## exclude(x.initialize)
## exclude(x.finalize)
exclude(x.applyGhostBoundaries)
exclude(x.enforceBoundaries)

#-------------------------------------------------------------------------------
# Policies.
#-------------------------------------------------------------------------------
set_policy(x.artificialViscosity, return_internal_reference())
set_policy(x.kernel, return_internal_reference())
set_policy(x.PiKernel, return_internal_reference())

#-------------------------------------------------------------------------------
# Properties.
#-------------------------------------------------------------------------------
add_property(x, "cfl", "cfl", "setCfl")
add_property(x, "useVelocityMagnitudeForDt", "useVelocityMagnitudeForDt", "setUseVelocityMagnitudeForDt")
add_property(x, "useAngularMomentumForDt", "useAngularMomentumForDt", "setUseAngularMomentumForDt")

add_property(x, "minMasterNeighbor", "minMasterNeighbor")
add_property(x, "maxMasterNeighbor", "maxMasterNeighbor")
add_property(x, "averageMasterNeighbor", "averageMasterNeighbor")

add_property(x, "minCoarseNeighbor", "minCoarseNeighbor")
add_property(x, "maxCoarseNeighbor", "maxCoarseNeighbor")
add_property(x, "averageCoarseNeighbor", "averageCoarseNeighbor")

add_property(x, "minRefineNeighbor", "minRefineNeighbor")
add_property(x, "maxRefineNeighbor", "maxRefineNeighbor")
add_property(x, "averageRefineNeighbor", "averageRefineNeighbor")

add_property(x, "minActualNeighbor", "minActualNeighbor")
add_property(x, "maxActualNeighbor", "maxActualNeighbor")
add_property(x, "averageActualNeighbor", "averageActualNeighbor")

#-------------------------------------------------------------------------------
# Instantiations.
#-------------------------------------------------------------------------------
x1d = x("Spheral::Dim<1>", "GenericHydro1d")
x2d = x("Spheral::Dim<2>", "GenericHydro2d")
x3d = x("Spheral::Dim<3>", "GenericHydro3d")

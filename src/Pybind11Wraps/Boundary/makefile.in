PKGNAME = Boundary
PKGDIR = $(PKGNAME)/
PYB11TARGET = Spheral$(PKGNAME).$(SHLIBEXT)
PYB11SRCS = \
	BoundaryAbstractMethods.py \
	Boundary.py \
	PlanarBoundary.py \
	ReflectingBoundary.py \
	RigidBoundary.py \
	PeriodicBoundary.py \
	ConstantVelocityBoundary.py \
	ConstantXVelocityBoundary.py \
	ConstantYVelocityBoundary.py \
	ConstantZVelocityBoundary.py \
	ConstantRVelocityBoundary.py \
	ConstantBoundary.py \
	CRKSPHVoidBoundary.py

